%h1 
  Events in
  = @current_city.name
%h5 
  - if current_user.no_tags?
    = link_to "Add interest tags so people interested in the same stuff can find you", edit_user_path(current_user), class: "bg-warning"
  - else
    Filter by my tags:
    = raw current_user.tags.map(&:name).map { |t| link_to t, events_path(:tag => t), class: "bg-info" }.join(', ')

- @events.each do |event|
  %h4
    = event.title
    \-
    = event.city.name
    \-
    = link_to "See Event", event_path(event)
  %h6
    = event.pretty_time
  %h5
    = raw event.tags.map(&:name).map { |t| link_to t, events_path(:tag => t), class: "bg-info" }.join(', ')
    
= link_to "Create an Event", new_event_path, class: "btn btn-sm btn-primary"
  