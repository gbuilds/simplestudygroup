%h1
  = gravatar_for(@user)
  = @user.full_name
- if current_user? @user
  = link_to "Edit my profile", edit_user_path(current_user)
- else
  = link_to "Add as Connection", friendship_requests_path(receiver_id: @user.id), method: :post 
%h4 
  = @user.description
%h5
  Tagged Interests:
  = raw @user.tags.map(&:name).map { |t| link_to t, users_path(:tag => t), class: "bg-info" }.join(', ')
%h5 
  Location:
  = @user.city.name
%h5 Friends:
%h5 Contact Information:
%h5 Attending Events:
%ul
  - @user.attended_events.each do |event|
    %li
      = link_to event.title, event_path(event)
%h5 Created Events:
%ul
  - @user.created_events.each do |event|
    %li
      = link_to event.title, event_path(event)