%h1
  = gravatar_for(@user)
  = @user.full_name
- if current_user? @user
  = link_to "Edit my profile", edit_user_path(current_user)
- else
  = link_to "Add as Connection", friendship_requests_path(receiver_id: @user.id), method: :post
%h4 
  = @user.description

- if @user.received_frequests.any?
  = pluralize(@user.received_frequests.count, "connection request")
  from:
  - @user.received_frequests.each do |req|
    %p
      = req.sending_user.full_name
      = link_to "Confirm", friendship_request_path(req, method: :patch, status: "accepted")
      = link_to "Delete", friendship_request_path(req, method: :patch, status: "declined")
- else
  %p No pending friend requests
    

%h5
  Tagged Interests:
  = raw @user.tags.map(&:name).map { |t| link_to t, users_path(:tag => t), class: "bg-info" }.join(', ')
%h5 
  Location:
  = @user.city.name
%h5 Friends:
%h5 Contact Information:
%h5 Attending Events:
%ul
  - @user.attended_events.each do |event|
    %li
      = link_to event.title, event_path(event)
%h5 Created Events:
%ul
  - @user.created_events.each do |event|
    %li
      = link_to event.title, event_path(event)