%h1 
  Users in
  = @current_city.name
%h5 
  - if current_user.no_tags?
    = link_to "Add interest tags so people interested in the same stuff can find you", edit_user_path(current_user), class: "bg-warning"
  - else
    Filter by my tags:
    = raw current_user.tags.map(&:name).map { |t| link_to t, users_path(:tag => t), class: "bg-info" }.join(', ')

- @users.each do |user|
  %h4
    = gravatar_for(user, size: 40)
    = user.full_name
    \-
    = user.city.name
    \-
    = link_to "Profile", user_path(user)
  %h5
    \ Tags:
    = raw user.tags.map(&:name).map { |t| link_to t, users_path(:tag => t), class: "bg-info" }.join(', ')